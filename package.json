{
    "name": "resume-reader",
    "version": "1.5.0",
    "description": "",
    "source": "./public/index.html",
    "browserslist": "> 0.5%, last 2 versions, not dead",
    "scripts": {
        "start": "parcel",
        "build": "parcel build",
        "test": "jest \".*.test.(ts|tsx)\"",
        "test:ci": "jest \".*.test.(ts|tsx)\" --coverage --ci"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/benefiction/resume-reader.git"
    },
    "author": "Benedikt Villwock",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/benefiction/resume-reader/issues"
    },
    "homepage": "https://github.com/benefiction/resume-reader#readme",
    "devDependencies": {
        "@babel/preset-env": "7.16.11",
        "@babel/preset-react": "7.16.7",
        "@babel/preset-typescript": "7.16.7",
        "@parcel/transformer-svg-react": "2.4.0",
        "@parcel/transformer-typescript-tsc": "2.4.0",
        "@testing-library/jest-dom": "5.16.2",
        "@testing-library/react": "12.1.4",
        "@types/jest": "27.4.1",
        "@types/mocha": "9.1.0",
        "@types/node": "17.0.21",
        "@types/react": "17.0.42",
        "@types/react-dom": "17.0.14",
        "babel-plugin-css-modules-transform": "1.6.2",
        "jest": "27.5.1",
        "parcel": "2.4.0",
        "postcss": "8.4.12",
        "postcss-modules": "4.3.1"
    },
    "dependencies": {
        "@parcel/logger": "2.4.0",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "the-new-css-reset": "1.5.1"
    },
    "alias": {
        "@/components/*": "./src/components/$1",
        "@/containers/*": "./src/containers/$1",
        "@/contexts/*": "./src/contexts/$1",
        "@/assets/*": "./public/assets/$1",
        "@/utils/*": "./src/utils/$1",
        "@/mocks/*": "./__mocks__/$1",
        "@/@types/*": "./src/@types/$1"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "clearMocks": true,
        "moduleNameMapper": {
            "\\.(svg|jpg|webp|ttf|woff|png|gif)$": "<rootDir>/__mocks__/fileTransform.ts",
            "@/assets/(.*)": "<rootDir>/public/assets/$1",
            "@/utils/(.*)": "<rootDir>/src/utils/$1",
            "@/components/(.*)": "<rootDir>/src/components/$1",
            "@/containers/(.*)": "<rootDir>/src/containers/$1",
            "@/contexts/(.*)": "<rootDir>/src/contexts/$1",
            "@/mocks/(.*)": "<rootDir>/__mocks__/$1",
            "@/@types/(.*)": "<rootDir>/src/@types/$1"
        },
        "setupFilesAfterEnv": [
            "@testing-library/jest-dom/extend-expect"
        ]
    }
}
